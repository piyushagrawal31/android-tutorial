<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/edittext_background_disabled" />
            <stroke android:width="0.5dip" android:color="@color/edittext_border_disabled" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edittext_background_pressed" />
            <stroke android:width="0.5dip" android:color="@color/edittext_border_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edittext_background_focused" />
            <stroke android:width="0.5dip" android:color="@color/edittext_border_focused" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/edittext_background" />
            <stroke android:width="0.5dip" android:color="@color/edittext_border" />
        </shape>
    </item>
</selector>