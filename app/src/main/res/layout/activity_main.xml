<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pstech.tutorials.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/basic_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Basic Intent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter User Name"/>

        <TextView
            android:id="@+id/typed_txt"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:hint="Enter Data to be passed to another activity" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <Button
            android:id="@+id/intent_with_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Intent With Data" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/basic_intent2"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_weight="1"
            android:text="fist button" />

        <Button
            android:id="@+id/basic_intent3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="Another button" />

        <Button
            android:id="@+id/image_load_gallery"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="@string/title_image_load_gallery" />

        <Button
            android:id="@+id/list_view_example"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="@string/title_list_view_example" />

    </LinearLayout>
</LinearLayout>
